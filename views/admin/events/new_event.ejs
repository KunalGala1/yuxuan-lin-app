<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Yuxuan Lin | Dashboard | New Event</title>
  <%- include('../../partials/head') %>
</head>

<body class="dashboard">
  <%- include('../../partials/aside') %>
  <script>
    document.querySelector('aside .middle ul li:nth-child(1) a')
      .classList.add('active');
  </script>
  <main>
    <h1 class="secondary-header">New Event</h1>

    <!-- New Event Form -->
    <%- include('../../partials/form', {
        metadata: {
          method: 'post',
          action: '/dashboard/events',
          enctype: 'multipart/form-data',
          name: 'event'
        },
        fields: [
          { name: 'title', required: true },
          { type: 'hidden', name: 'slug' },
          { tag: 'textarea', name: 'shortDescription_en', label: 'short description (EN)' },
          { tag: 'textarea', name: 'shortDescription_zh', label: 'short description (ZH)' },
          { type: 'date' },
          { type: 'time' },
          { type: 'url', label: 'URL' },
          { name: 'location' },
          { type: 'file', label: 'image' },
          { tag: 'textarea', name: 'longDescription_en', label: 'long description (EN)' },
          { tag: 'textarea', name: 'longDescription_zh', label: 'long description (ZH)' },
        ]
      }) %>
  </main>

  <script src="/js/previewImage.js" defer></script>
</body>

</html>