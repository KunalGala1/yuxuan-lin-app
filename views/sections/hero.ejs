<% const introBody = JSON.parse(intro.body); const introImage =
introBody.file.location; const introAlt = introBody.file.alt; %>

<section id="hero" class="bg-main">
  <div class="wrapper flex-col sm:flex-row-reverse">
    <div class="wrapper-item max-w-[350px]">
      <img src="<%= introImage %>" alt="<%= introAlt %>" class="rounded-sm"/>
    </div>
    <div class="wrapper-item main-txt max-w-[500px] sm:px-8">
      <%- introBody['intro_' + lang] %>
    </div>
  </div>
</section>
