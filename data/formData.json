          "Solo",
          "Dance",
          "Choral",
          "Vocal",
          "Electroacoustic",
          "Film",
          "Theatre",
          "Installation",
          "Other"
        ]
      },
      {
        "name": "instrumentation",
        "label": "detailed insturmentation (3.2.2...)"
      },
      { "name": "duration" },
      { "name": "year" },
      { "type": "url", "name": "url", "label": "URL to purchase music" },
      {
        "tag": "textarea",
        "name": "commission_en",
        "label": "commission information"
      },
